String.find_index (xs: String) (cond: Char -> Bool) : Maybe (Pair Char Nat)
String.find_index xs cond = String.find_index.go xs cond Nat.zero

String.find_index.go (xs: String) (cond: Char -> Bool) (idx: Nat) : Maybe (Pair Char Nat)
String.find_index.go (String.nil )           cond idx = Maybe.none
String.find_index.go (String.cons head tail) cond idx =
  if cond head {
    Maybe.some (Pair.new head idx)
  } else {
    String.find_index.go tail cond (Nat.succ idx)
  }
