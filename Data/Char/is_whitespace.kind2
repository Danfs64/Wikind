// True if the character is a whitespace, as defined in the Unicode standard,
// but only for characters in ASCII range
Data.Char.is_whitespace (c: Data.Char) : Data.Bool
Data.Char.is_whitespace ' ' = Data.Bool.true
Data.Char.is_whitespace  10 = Data.Bool.true // \n
Data.Char.is_whitespace   9 = Data.Bool.true // \t
Data.Char.is_whitespace  11 = Data.Bool.true
Data.Char.is_whitespace  12 = Data.Bool.true
Data.Char.is_whitespace  13 = Data.Bool.true
Data.Char.is_whitespace   c = Data.Bool.false